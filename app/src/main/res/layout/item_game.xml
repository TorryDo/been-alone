<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:fitsSystemWindows="true"
    >

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_game_cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:cardCornerRadius="@dimen/round_corner_1"
        app:cardElevation="@dimen/default_elevation"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="35dp"
        android:layout_marginVertical="15dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/item_game_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/game_title"
        android:textSize="@dimen/default_big_text_size"
        android:textStyle="bold"
        android:elevation="@dimen/default_elevation"
        android:layout_margin="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"

        app:layout_constraintBottom_toBottomOf="@id/item_game_cardview"
        app:layout_constraintStart_toStartOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>