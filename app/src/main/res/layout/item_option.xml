<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/item_option_layout"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_option_image"
        android:layout_width="@dimen/cd_size"
        android:layout_height="@dimen/cd_size"

        android:src="@mipmap/beenalone"
        android:layout_margin="20dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/item_option_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/app_name"
        android:textStyle="bold"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/text_color_default"
        android:layout_marginStart="@dimen/margin_big"
        android:gravity="start|bottom"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_option_image"
        app:layout_constraintBottom_toBottomOf="parent"
        />
<!--    <TextView-->
<!--        android:id="@+id/item_option_content"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->

<!--        android:text="@string/app_name"-->
<!--        android:gravity="start|top"-->


<!--        app:layout_constraintVertical_weight="1"-->
<!--        app:layout_constraintTop_toBottomOf="@id/item_option_title"-->
<!--        app:layout_constraintStart_toStartOf="@id/item_option_title"-->
<!--        app:layout_constraintBottom_toBottomOf="@id/item_option_image"-->
<!--        />-->

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/item_option_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:visibility="invisible"
        android:theme="@style/CustomSwitch"
        android:layout_marginHorizontal="@dimen/margin_start"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>