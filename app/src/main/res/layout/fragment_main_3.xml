    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main3_login_fb"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"

        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/fb_background"
        android:elevation="@dimen/small_elevation"
        android:layout_marginTop="15dp"
        android:text="@string/fb_signin"
        android:textColor="@color/fb_txt_color"
        android:layout_marginHorizontal="25dp"

        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toBottomOf="@id/main3_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/main3_ic_fb"
        android:layout_width="wrap_content"
        android:layout_height="0dp"

        android:src="@drawable/ic_fb_logo"
        android:elevation="@dimen/small_elevation"
        android:paddingVertical="10dp"

        app:layout_constraintTop_toTopOf="@id/main3_login_fb"
        app:layout_constraintStart_toStartOf="@id/main3_login_fb"
        app:layout_constraintBottom_toBottomOf="@id/main3_login_fb"
        />

    <TextView
        android:id="@+id/main3_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="@string/google_signin"
        android:gravity="center"
        android:textColor="@color/main_color"
        android:textSize="@dimen/default_title_size"
        android:textStyle="bold"
        android:visibility="invisible"

        app:layout_constraintTop_toTopOf="@id/main3_login_fb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main3_age"
        />
    <TextView
        android:id="@+id/main3_age"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="@string/google_signin"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/default_big_text_size"
        android:textStyle="bold"
        android:visibility="invisible"
        android:layout_marginTop="15dp"

        app:layout_constraintTop_toBottomOf="@id/main3_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main3_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginTop="15dp"

        app:layout_constraintTop_toBottomOf="@id/main3_login_fb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



