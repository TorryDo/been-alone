<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/default_round_corner"/>
            <gradient android:startColor="@color/dark_gray_darker"
                android:endColor="@color/dark_gray_lighter"
                android:angle="180"
                />
        </shape>
    </item>

    <item android:state_pressed="false" >
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/default_round_corner"/>
            <gradient android:startColor="@color/dark_gray_lighter"
                android:endColor="@color/gray"
                android:angle="180"
                />
        </shape>
    </item>
</selector>